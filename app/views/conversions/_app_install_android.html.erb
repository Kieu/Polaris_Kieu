<th><%= f.label I18n.t("conversion.conversion_category.app.track_method.label") %></th>
<td colspan="4">
  <table>
    <tr>
<td><label>
    <%= f.radio_button :track_method, 0, checked: true, onclick: "check_track_method();" %><%= I18n.t("conversion.conversion_category.app.track_method.install_referrer") %>
  </label></td>
  <td><label>
  <%= f.radio_button :track_method, 1, onclick: "check_track_method();" %><%= I18n.t("conversion.conversion_category.app.track_method.white") %>
  </label></td>
  <td><label>
  <%= f.radio_button :track_method, 2, onclick: "check_track_method();" %><%= I18n.t("conversion.conversion_category.app.track_method.welcome") %>
  </label></td>
  <td><label>
    <%= f.radio_button :track_method, 3, onclick: "check_track_method();" %><%= I18n.t("conversion.conversion_category.app.track_method.custom.label") %></label>
    <%= f.text_field :url, id: "url", maxlength: 255, disabled: (@conversion && @conversion.track_method==3) ? false : true, class: "urlBox", placeholder: I18n.t("conversion.conversion_category.app.track_method.custom.url") %>
</td>
</tr>
</table>
</td>

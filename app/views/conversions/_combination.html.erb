<tbody>
  <tr>
    <th><%= f.label I18n.t("conversion.combination.pattern") %></th>
    <td>
      <table id="cv_category">
      	<% if !@cv_list || @cv_list.count <= 0 %>
      	<tr>
      		<td><select name="op[]" class="ta-c mcdropdown_spacing" style="display:none">
		      <option value="+">+</option>
		      <option value="-">−</option>
		      <option value="x">×</option>
		      <option value="÷">÷</option>
		    </select></td>
      		<td>
      			<input type="text" name="category1" id="category1" onclick="get_category(1);" value="" />
      			<input type="hidden" name="cv_num" id="cv_num" value="1" />
      			<input type="hidden" name="cv_kind[]" id="cv_kind1" />
      			<input type="hidden" name="cv[]" id="cv1" />
      		</td>
      	</tr>
      	<% end %>
      	<% 
      	if @cv_list && @cv_list.count > 0 %>
      		<tr><td colspan="2"><input type="hidden" name="cv_num" id="cv_num" value="<%= @cv_list.count %>" /></td></tr>
	    <%    	
	      	@cv_list.each do |idx, cv|
	      	%>
	      	<tr>
	      		<td>
	      		<% if idx>0 %>	
	      		<select name="op[]" class="ta-c mcdropdown_spacing" id="op#{idx}">
			      <option value="+" <% if @op_list[idx] == '+'%> selected="selected" <% end %>>+</option>
			      <option value="-" <% if @op_list[idx] == '-'%> selected="selected" <% end %>>−</option>
			      <option value="x" <% if @op_list[idx] == 'x'%> selected="selected" <% end %>>×</option>
			      <option value="÷" <% if @op_list[idx] == '÷'%> selected="selected" <% end %>>÷</option>
			    </select>
			    <% end %>
			    </td>
	      		<td>
	      			<input type="text" name="category<%= idx + 1 %>" onclick="get_category(<%= idx+1 %>);" id="category<%= idx+1 %>" value="<%= cv['name']%>" />
	      			<input type="hidden" name="cv_kind[]" id="cv_kind<%= idx + 1 %>" value="<%= @cv_kind_list[idx]['id']%>" />
	      			<input type="hidden" name="cv[]" value="<%= cv['id']%>" id="cv#{idx}" />
	      		</td>
	      	</tr>	
      	<%
      		end 
      	end
      	%>
     </table>
     <table>	
      	<tr>
      		<td colspan="2">
      			<input type="button" value="Add" onclick="add_category();">
      		</td>
      	</tr>
      </table>
    </td>
    <td></td>
  </tr>
</tbody>

<!-- APP選択 -->
<script type="text/javascript">
  function render_install(){
    $('#app_type_area').html('');
    $('#app_type_area').html('<%=j render "app_install", f: f %>');
  }
  function render_action_in_app(){
    $('#app_type_area').html('');
    $('#app_type_area').html('<%=j render "app_action_in_app", f: f %>');
  }
  
</script>


<tbody>
  <tr>
    <th><%= f.label I18n.t("conversion.conversion_category.app.track_type.label") %></th>
    <td colspan="2"><label>
      <%= f.radio_button :track_type, 0, checked: true, disabled: (@conversion.track_type!=0) ? true: false, onclick: "render_install();" %>Install
    </label></td>
    <td colspan="2"><label>
      <%= f.radio_button :track_type, 1, disabled: (@conversion.track_type!=1) ? true: false, onclick: "render_action_in_app();" %>アプリ内アクション
    </label></td>
  </tr>
  <tr>
  	<td colspan="5">	
	<div class="client_info" id="app_type_area">
	  <%= 
	  if(@conversion.track_type==1)
	  	render "app_action_in_app", f: f 
	  else	
	  	render "app_install", f: f
	  end
	  %>
	</div>
	</td>
  </tr>
</tbody>

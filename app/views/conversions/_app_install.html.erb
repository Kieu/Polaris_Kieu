
<table>
<tr>
  <th><%= f.label I18n.t("conversion.conversion_category.app.os.label") %></th>
  <td colspan="2"><label>
    <%= f.radio_button :os, 2, checked: true, onclick: "render_ios();" %><%= I18n.t("conversion.conversion_category.app.os.ios")%>
  </label></td>
  <td colspan="2"><label>
    <%= f.radio_button :os, 1, onclick: "render_android();" %><%= I18n.t("conversion.conversion_category.app.os.android")%>
  </label></td>
</tr>
<tr>
  <th><%= f.label I18n.t("conversion.conversion_category.app.conversion_mode.label") %></th>
  <td>
    <%= f.radio_button :conversion_mode, 0, checked: true, onclick: "render_fb_app_id();" %><%= I18n.t("conversion.conversion_category.app.conversion_mode.all") %>
  </td>
  <td>
    <%= f.radio_button :conversion_mode, 1, onclick: "render_fb_app_id();" %><%= I18n.t("conversion.conversion_category.app.conversion_mode.facebook")%>
 </td>
  <td>
    <%= f.radio_button :conversion_mode, 2, onclick: "remove_fb_app_id();" %><%=I18n.t("conversion.conversion_category.app.conversion_mode.other")%>
 </td>
  <td>&nbsp;</td>
</tr>
<tr>
  <th><a href="#"><img src="/assets/icon_help.gif" /></a><%= f.label I18n.t("conversion.conversion_category.app.duplicate.label") %></th>
  <td>
    <%= f.radio_button :duplicate, 0, checked: true %><%=I18n.t("conversion.conversion_category.app.duplicate.label1")%>
 </td>
  <td>
    <%= f.radio_button :duplicate, 1 %><%=I18n.t("conversion.conversion_category.app.duplicate.label2")%>
 </td>
  <td colspan="2">&nbsp;</td>
</tr>
<tr id="method_area">
  <%= 
	  if(@conversion.os==1)
	  	render "app_install_android", f: f 
	  else	
	  	render "app_install_ios", f: f
	  end
	  %>
</tr>
<tr id="fb_app_id">
  <%= 
	  if(@conversion.conversion_mode!=2)
	  	render "app_install_fb_app_id", f: f
	  end
	  %>
</tr>
<tr>
  <th><%= f.label t("conversion.unique_definition") %></th>
  <td colspan="4">
    <%= f.select :unique_def, t("conversions.unique_definition").each_with_index.map {|name, index| [name, index]} %>
  </td>
</tr>
<tr id="judging_box">
  <th><%= I18n.t("conversion.conversion_category.app.option.label")%><br /><%= I18n.t("conversion.conversion_category.app.option.judging")%></th>
  <td colspan="4"><label>
    <br /><%= f.check_box :judging %><%= I18n.t("conversion.conversion_category.app.option.configure")%>
  </label></td>
</tr>
<tr>
  <th><%= f.label I18n.t("conversion.conversion_category.app.sale_unit_price") %></th>
  <td colspan="4">
    <%= f.text_field :sale_unit_price, maxlength: 255, placeholder: "ï¿¥" %>
  </td>
</tr>
<tr>
  <th><%= f.label I18n.t("conversion.conversion_category.app.reward_form.label") %></th>
  <td colspan="2"><label>
    <%= f.radio_button :reward_form, 0, checked: true %><%= I18n.t("conversion.conversion_category.app.reward_form.straight_line_type") %>
  </label></td>
  <td colspan="2"><label>
    <%= f.radio_button :reward_form, 1 %><%= I18n.t("conversion.conversion_category.app.reward_form.declining_balance_type") %>
  </label></td>
</tr>
</table>
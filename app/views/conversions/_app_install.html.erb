<%= f.label "OS" %>
<%= f.radio_button :os, 0, checked: true, onclick: "render_facebook();" %>
<%= f.label "iOS" %>
<%= f.radio_button :os, 1, onclick: "render_other();" %>
<%= f.label "Android" %><br />

<%= f.label "Conversion mode" %>
<%= f.radio_button :conversion_mode, 0, checked: true %>
<%= f.label "All" %>
<%= f.radio_button :conversion_mode, 1 %>
<%= f.label "Facebook only" %>
<%= f.radio_button :conversion_mode, 2 %>
<%= f.label "Others" %><br />

<%= f.label "Duplicate" %>
<%= f.radio_button :duplicate, 0, checked: true %>
<%= f.label "Yes" %>
<%= f.radio_button :duplicate, 1 %>
<%= f.label "No" %><br />

<%= f.label "Unique definition" %>
<%= f.select :unique_def,
  t("conversions.unique_definition").each_with_index.map {|name, index| [name, index]} %><br />

<%= f.label "Sale unit price" %>
<%= f.text_field :sale_unit_price, maxlength: 255, style: "width: 250px" %><br />

<%= f.label "Judging" %>
<%= f.check_box :judging %><br />

<%= f.label "Reward format" %>
<%= f.radio_button :reward_form, 0 %>
<%= f.label "Fixed amount" %>
<%= f.radio_button :reward_form, 1 %>
<%= f.label "Fixed rate" %><br />

<div id="method_area">
  <%= render "app_install_track_facebook", f: f %>
</div>

<script>
  function render_facebook() {
    $('#method_area').html('<%=j render "app_install_track_facebook", f: f %>')
  }
  function render_other() {
    $('#method_area').html('<%=j render "app_install_track_other", f: f %>')
  }
</script>

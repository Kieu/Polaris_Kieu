    {display: '<%= I18n.t("user.user_table.email")%>', name : 'email', width : 'auto', sortable : false, align: 'left'},
    {display: '<%= I18n.t("user.user_table.company_name")%>', name : 'company', width : 'auto', sortable : false, align: 'left'},
    {display: '<%= I18n.t("user.user_table.role")%>', name : 'role', width : 'auto', sortable : false, align: 'center'}
			],
		usepager: true,
		useRp: true,
		rp: 10,
		showTableToggleBtn: true,
		height: 300,
        pagetext: "<%= I18n.t("Page") %>",
        outof: "<%= I18n.t("of") %>"
	});
</script>

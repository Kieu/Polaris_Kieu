<table style="display:none" class="newTable04 fixTable d-none"></table>
<script type="text/javascript">
	$(".newTable04").flexigrid({
		url: "<%= get_users_list_users_path %>",
        optionGet : "7",
        editOption : true,
        deleteOption : true,

        resizable : false,
        striped : true,
		dataType: 'json',
		colModel : [
            {
                display : 'Number', name : 'num', sortable : false, align : 'left', hide : true
            },

<%= render "layouts/prevent_change_page_edit" %>
<%= stylesheet_link_tag "css/users_new" %>
<%= stylesheet_link_tag "css/common" %>
<%= flash[:success] if flash[:success] %>
<div id="user_form">
  <p class="h2"><%= I18n.t("user.crumb_edit") %></p>
  <%= form_for(@user) do |f| %>
      <table>
        <tbody>
        <tr>
          <th><%= f.label I18n.t("user.username") %></th>
          <td colspan="2"><%= f.text_field :username, maxlength: 255, style: "width: 200px" %></td>
        </tr>
        <tr>
          <th><%= f.label I18n.t("user.roman_name") %></th>
          <td colspan="2"><%= f.text_field :roman_name, maxlength: 255, style: "width: 200px" %></td>
        </tr>
        <tr>
          <th> <%= f.label I18n.t("user.email") %></th>
          <td colspan="2"><%= f.text_field :email, maxlength: 255, style: "width: 200px" %></td>
        </tr>
        <tr>
          <th> <%= f.label I18n.t("user.role.label") %></th>
          <td colspan="2">
            <%= text_field_tag :role_id, @user.role.role_name, disabled: true %>
          </td>
        </tr>
        <tr>
          <th><%= f.label I18n.t("user.company_name") %></th>
          <td colspan="2">
            <% if @user.client? %>
                <%= text_field_tag :company_id, Client.find(@user.company_id).client_name, disabled: true %>
            <% else %>
                <%= text_field_tag :company_id, Agency.find(@user.company_id).agency_name, disabled: true %>
            <% end %>
        </tr>
        <tr>
          <th> <%= f.label I18n.t("user.password.label") %></th>
          <td colspan="2">*******************</td>
        </tr>
        <tr>
          <th><%= f.label I18n.t("user.password_notification.label") %></th>
          <td><%= f.radio_button :password_flg, "1", disabled: true %> <%= f.label I18n.t("user.password_notification.not_notified") %></td>
          <td><%= f.radio_button :password_flg, "0", disabled: true %> <%= f.label I18n.t("user.password_notification.to_notified") %></td>
        </tr>
        <tr>
          <th><%= f.label I18n.t("user.disabled.label") %></th>
          <td>
              <% if @user.status == Settings.user.deactive %>
                  <input type="checkbox" id = "disable_button" checked="checked" name="deactive">
              <% else %>
                  <input type="checkbox" id = "disable_button" name="deactive">
              <% end %><%= I18n.t("user.disabled.disable") %>
          </td>
        </tr>
        </tbody>
      </table>
      <div class="submit_area">
        <input type="image" id="btn_submit" src="/assets/btn_done.gif">
        <%= link_to raw('<img align="right" alt="キャンセル" src="/assets/btn_cancel.gif">'), users_path %>
      </div>
      </form>
  <% end %>
</div>

<div style='display:none'>
	<div id="disabled">
		<p class="del_message" style="margin-top:20px;">
			【注意】下記、ユーザーを無効にしようとしています。</br>
			このユーザーではログイン出来なくなってしまいますが、</br>
			問題ないでしょうか。</br>
			------------------------------------------------------------------------------</br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;ユーザー名&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= @user.username %></br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;メールアドレス&nbsp;&nbsp;: <%= @user.email %></br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;権限&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ：<%= @user.role.role_name %></br>
			------------------------------------------------------------------------------</br>
		</p>
	</div>
	<div id="enabled">
		<p class="del_message" style="margin-top:20px;">
			【注意】下記、ユーザーの無効化を削除しようとしています。</br>
			このユーザーでログインが出来るようになりますが、</br>
			問題ないでしょうか。</br>
			------------------------------------------------------------------------------</br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;ユーザー名&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= @user.username %></br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;メールアドレス&nbsp;&nbsp;: <%= @user.email %></br>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;権限&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ：<%= @user.role.role_name %></br>
			------------------------------------------------------------------------------</br>
		</p>
	</div>
</div>
<script type="text/javascript">
	$(function(){
		check = $("#disable_button").is(':checked')? true : false;
		$(".ok_popup").click(function(){
			$(".edit_user").submit();
		})
		
		$("#btn_submit").click(function(e){
			e.preventDefault();
			checked = $("#disable_button").is(':checked')? true : false;
			if (check != checked){
				if (checked){
					$.confirm({
			            'message'	: $("#disabled").html(),
			            'buttons'	: {
			                "<%= I18n.t('popup.cancel') %>"	: {
			                    'class'	: 'popup_no',
			                    'action': function(){
			                    	$("#disable_button").attr("checked",check);
			                    }	
			                },
			                "<%= I18n.t('popup.disable') %>"	: {
			                    'class'	: 'popup_yes',
			                    'action': function(){
			                        $(".edit_user").submit();
			                    }
			                },
			            }
        			});
				}else{
					$.confirm({
			            'message'	: $("#enabled").html(),
			            'buttons'	: {
			                "<%= I18n.t('popup.cancel') %>"	: {
			                    'class'	: 'popup_no',
			                    'action': function(){
			                    	$("#disable_button").attr("checked",check);
			                    }	
			                },
			                "<%= I18n.t('popup.enable') %>"	: {
			                    'class'	: 'popup_yes',
			                    'action': function(){
			                        $(".edit_user").submit();
			                    }
			                },
			            }
        			});
				}
			}else{
				$(".edit_user").submit();
			}
		})
	})
</script>

    {display: '<%= I18n.t("cv_logs.click_utime")%>', name : 'click_utime', width : '120', sortable : true, align: 'left',hide: ($.cookie("cv_options")[11] == "1") ? false : true},
    {display: '<%= I18n.t("cv_logs.verify")%>', name : 'verify', width : '120', sortable : true, align: 'left',hide: ($.cookie("cv_options")[12] == "1") ? false : true},

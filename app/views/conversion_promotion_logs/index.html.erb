    {display: '<%= I18n.t("cv_logs.media")%>', name : 'media_id', width : '120', sortable : true, align: 'left', hide: ($.cookie("cv_options")[6] == "1") ? false : true},
    {display: '<%= I18n.t("cv_logs.account")%>', name : 'account_id', width : '120', sortable : true, align: 'left', hide: ($.cookie("cv_options")[7] == "1") ? false : true},
	{display: '<%= I18n.t("cv_logs.campaign")%>', name : 'campaign_id', width : '120', sortable : true, align: 'left',hide: ($.cookie("cv_options")[8] == "1") ? false : true},

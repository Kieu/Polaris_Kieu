		            $('tr#row-1').after("<div class='group_header'><%= I18n.t(Settings.media_category[1])%></div>");
		
					$('tr#row-2 td:nth-child('+(1+'n-'+(24))+')').remove();
		            $('tr#row-2').after("<div class='group_header'><%= I18n.t(Settings.media_category[2])%></div>");
		

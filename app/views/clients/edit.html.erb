		<div>Delete ok</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		list_user = []
		<% @client.client_users.each do |client_user|%>	
			<% if client_user.del_flg == 0 %>
				list_user.push("<%= client_user.user_id %>");
			<% end %>
		<% end %>
		return User.completeProjects(".searchbox input#search_user").result(function(e, data, formatted) {
        //location.href = "/promotions/" + data[1];
        if ($.inArray(data[1], list_user) >= 0){
        	alert("User was added");
        }else{
          $("#user_list").append(data[0] + " " + data[2] + " " + data[3]);
          $("#user_list").append("<input type = 'hidden' name='users_id[]' value ='" + data[1] + "'>");
          $("#user_list").append("<input type = 'checkbox' name='del_user_" + data[1] + "'>");
          list_user.push(data[1])
        }
        return false;
      });
	})
	$(".inline").colorbox({
					width: "30%",
					inline: true,
					escKey: false,
					overlayClose: false,
				});
	$("#del_cli").click(function(){
		$.ajax({
			url: "<%= del_client_clients_path %>",
			method: "POST",
			data: "client_id=" + "<%= @client.id %>",
			success: function(data){
				location.href = "/clients"
			}
		})
	})

	$("#cancel_del").click(function(){
		$(".inline").colorbox.close();
	})
</script>

<script>
    $(function(){
        $('#upload').slimScroll({
            color: '#0087A9',
            size: '8px',
            alwaysVisible: false
        });
    });
</script>
<div id="upload">
  <ul class="entrydate_box">
  <% if @jobs %>
    <% @jobs.each_with_index do |job, index| %>

          <li>
            <table class="entrydate_table">
              <tr>
                <td class="file_name"><%=job.filename%></td>
                <td class="capacity"><%= job.size %></td>
                <td class="daily"><%= job.created_at %></td>
                <td class="c_orange"><% if job.status == '1' %>作成中<%end%></td>
              </tr>
              <tr>
                <td colspan="4"><%= job.breadcrumb %></td>
              </tr>
            </table>
            <p class="btn_cancel"><% if job.status == '2' %> <a href="/background_jobs/download_file?id=<%= job.id %>">show error </a><%else%>sucess<%end%></p>
          </li>

    <% end %>
<% end %>
  </ul>
</div>
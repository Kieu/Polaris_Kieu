<style type="text/css">
    #upload {
        overflow: auto;
        height: 200px;
    }
</style>
<script>
    $(function(){
        $("#upload").niceScroll();
    });
    $(document).on('click', "#close_notify", function(){
        $(".inline_notify").colorbox.close();
    })
</script>
<div id="upload">
  <ul class="entrydate_box_notify">
  <% if @jobs %>
    <% @jobs.each_with_index do |job, index| %>

          <li>
            <table class="entrydate_table">
              <tr>
                <td class="file_name"><%=job.filename%></td>
                <td class="capacity"><%= job.size %></td>
                <td class="daily"><%= job.created_at.strftime("%m/%d/%y") %></td>
                <td class="c_orange"><% if job.status == '1' %><%= I18n.t('notification.creating') %><%end%></td>
              </tr>
              <tr>
                <td colspan="4"><%= job.breadcrumb %></td>
              </tr>
            </table>
            <p class="btn_cancel"><% if job.status == '2' %> <a href="/background_jobs/download_file?id=<%= job.id %>">show error </a><%else%><%= I18n.t('notification.completed') %><%end%></p>
          </li>

    <% end %>
<% end %>
  </ul>
</div>
<div>
  <p style="margin-top:30px;margin-left:220px"><a href="#" id="close_notify"><img alt="キャンセル" src="/assets/btn_close.gif"></a></p>
</div>
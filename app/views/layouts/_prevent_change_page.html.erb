<script type="text/javascript">
$(function(){
	$("#change").click(function(){
		location.href = href;
	});
	$("#cancel_change").click(function(){
		$('#prevent_change').colorbox.close();
	});
	$("a").click(function(e){
		href = $(this).attr("href");
		e.preventDefault();
		$.colorbox({
			width: "30%",
			inline: true,
			escKey: false,
			overlayClose: false,
			href: "#prevent_change",
		})
	})
})
</script>
<div style="display: none">
	<div id='prevent_change' style='padding:10px; background:#fff;'>
		<div>You will lose all your changes. Are you sure? </div>
		<button id="change">ok</button>
		<button id="cancel_change">Cancel</button>
	</div>
</div>